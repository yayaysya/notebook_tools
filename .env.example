# 智谱 AI API Key
# 在 https://open.bigmodel.cn/ 获取
ZHIPU_API_KEY=your_api_key_here

# 可选配置
# 文本模型 (默认: glm-4.6)
TEXT_MODEL=glm-4.6

# 视觉模型 (默认: glm-4.5v)
VISION_MODEL=glm-4.5v

# 请求超时时间(秒)
REQUEST_TIMEOUT=30

# 日志配置
# 日志级别: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=INFO

# 是否输出到文件
LOG_TO_FILE=True

# 日志目录
LOG_DIR=logs

# 单个日志文件最大大小(MB)
LOG_MAX_SIZE_MB=10

# 保留的日志文件数量
LOG_BACKUP_COUNT=5

# 是否启用详细日志 (已弃用,请使用 LOG_LEVEL=DEBUG)
DEBUG=False
